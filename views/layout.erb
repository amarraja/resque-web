<!DOCTYPE html>
<html>
<head>
  <title>Resque.</title>
  <link href="/style.css" media="screen" rel="stylesheet" type="text/css">
  <link href="/tabs.css" media="screen" rel="stylesheet" type="text/css">

  <script src="/jquery-1.3.2.min.js" type="text/javascript"</script>
  <script src="/jquery.relatize_date.js" type="text/javascript"</script>  
  <script src="/ranger.js" type="text/javascript"></script>
</head>
<body>
  
<div class="navigation" id="top">
  <div class="tabs">
    <div id="logo">
      Resque
    </div>
    <ul>
      <%= tab "Overview" %>
      <%= tab "Working" %>
      <%= tab "Failed" %>
      <%= tab "Queues" %>
      <%= tab "Workers" %>
      <%= tab "Stats" %>
    </ul>
  </div>
  <% if @subtabs %>
    <div class="tabs">
      <ul>
        <% for subtab in @subtabs %>
          <li <%= class_if_current "#{current_section}/#{subtab}" %>><a href="/<%= current_section %>/<%= subtab %>"><span><%= subtab %></span></a></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div id="main">
  <%= yield %>
</div>

</body>
</html>