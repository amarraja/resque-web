<% if worker = params[:id] %>
  <% data = resque.worker(worker) %>

  <h1><%= worker %>'s job</h1>
  
  <table>
    <tr>
      <th>&nbsp;</th>
      <th>Where</th>
      <th>Queue</th>
      <th>Started</th>      
      <th>Class</th>
      <th>Args</th>
    </tr>
      <tr>
        <td><img src="/working.png" alt="working" title="working"></td>
        <% host, pid, _ = worker.split(':') %>
        <td><a href="/workers/<%= worker %>"><%= host %>:<%= pid %></a></td>
        <% queue = data['queue'] %>
        <td><a class="queue" href="/queues/<%= queue %>"><%= queue %></a></td>
        <td><span class="time"><%= data['run_at'] %></span></td>        
        <td>      
          <code><%= data['payload']['class'] %></code>
        </td>
        <td><%= h(data['payload']['args']).inspect %></td>
      </tr>
  </table>

<% else %>

  <h1>Workers Working</h1>
  <table>
    <tr>
      <th>&nbsp;</th>
      <th>Where</th>
      <th>Queues</th>        
      <th>Processing</th>    
    </tr>
    <% for worker in resque.working %>
      <tr>
        <td><img src="/<%= state = resque.worker_state(worker) %>.png" alt="<%= state %>" title="<%= state %>"></td>
        <% host, pid, queues = worker.split(':') %>
        <td><a href="/workers/<%= worker %>"><%= host %>:<%= pid %></a></td>
        <td><%= queues.split(',').map { |q| '<a class="queue" href="/queues/' + q + '">' + q + '</a>'}.join(', ') %></td>
      
        <td>      
          <% data = resque.worker(worker) || {} %>
          <% if data['queue'] %>
            <code><%= data['payload']['class'] %></code>
            <small><a class="queue time" href="/working/<%= worker %>"><%= data['run_at'] %></a></small>
          <% else %>
            Waiting for more
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

<% end %>